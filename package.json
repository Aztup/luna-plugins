{
	"name": "neptune-plugin-template",
	"description": "A neptune plugin monorepo template",
	"main": "index.js",
	"scripts": {
		"build": "node ./build.js",
		"serve": "npx http-server --cors -S --port 443 -C .\\cert.pem -K .\\key.pem"
	},
	"devDependencies": {
		"@types/node": "^20.8.7",
		"esbuild": "^0.18.13",
		"neptune-types": "^1.0.0",
		"typescript": "^5.2.2"
	},
	"dependencies": {
		"@inrixia/helpers": "^2.0.10",
		"dasha": "^3.0.1"
	},
	"nodemonConfig": {
		"watch": [
			"./plugins/Shazam/src/**",
			"./plugins/AlwaysExclusive/src/**",
			"./plugins/SongDownloader/src/**",
			"./plugins/Testing/src/**",
			"./plugins/TidalTags/src/**",
			"./lib/**"
		],
		"ext": "ts",
		"exec": "npm run build"
	}
}
