{
	"name": "neptune-plugin-template",
	"description": "A neptune plugin monorepo template",
	"main": "index.js",
	"scripts": {
		"watch": "concurrently \"nodemon\" \"npm run serve\"",
		"build": "node ./build.js",
		"serve": "npx http-server --cors -S -p 443"
	},
	"devDependencies": {
		"@types/node": "^20.12.7",
		"concurrently": "^8.2.2",
		"esbuild": "^0.20.2",
		"neptune-types": "^1.0.0",
		"nodemon": "^3.1.4",
		"typescript": "^5.4.5"
	},
	"dependencies": {
		"@inrixia/helpers": "^2.0.10",
		"dasha": "^3.0.2"
	},
	"nodemonConfig": {
		"watch": [
			"./plugins/*/src/**",
			"./lib/**"
		],
		"ext": "*",
		"exec": "npm run build"
	}
}