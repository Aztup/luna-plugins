{
	"name": "@inrixia/neptune-plugins",
	"description": "Plugins for Neptune writtern by @inrixia",
	"scripts": {
		"watch": "concurrently \"nodemon\" \"npm run serve\"",
		"build": "node ./build.js",
		"serve": "npx http-server --cors -S -p 443"
	},
	"devDependencies": {
		"@types/node": "^20.12.7",
		"concurrently": "^8.2.2",
		"esbuild": "^0.20.2",
		"http-server": "^14.1.1",
		"neptune-types": "^1.0.0",
		"nodemon": "^3.1.4",
		"typescript": "^5.4.5"
	},
	"dependencies": {
		"@inrixia/helpers": "^2.0.10",
		"dasha": "^3.0.2",
		"music-metadata": "^8.3.0"
	},
	"nodemonConfig": {
		"watch": [
			"./plugins/*/src/**",
			"./lib/**"
		],
		"ext": "*",
		"exec": "npm run build"
	}
}
